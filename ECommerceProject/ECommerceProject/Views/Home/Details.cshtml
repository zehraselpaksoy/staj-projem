@model ECommerceProject.Entities.Concrete.Product

@{
    ViewBag.Title = "Ürün Detayı";
}

<h2>Ürün Detayı</h2>

<table class="table">
    <tr>
        <th>Ürün Adı:</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Açıklama:</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Fiyat:</th>
        <td>@Model.Price ₺</td>
    </tr>
    <tr>
        <th>Stok:</th>
        <td>@Model.Stock</td>
    </tr>
    <tr>
        <th>Kategori:</th>
        <td>@Model.Category?.Name</td>
    </tr>
</table>

<a href="@Url.Action("Index", "Home")">← Geri Dön</a>
