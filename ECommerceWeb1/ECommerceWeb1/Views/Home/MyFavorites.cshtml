@model List<ECommerceProject.Entities.Concrete.Product>
@using System.Globalization

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // ✅ Template layout'u
    ViewBag.Title = "Favori Ürünlerim";
}

<h2 class="mb-4 text-center text-primary">❤️ Favori Ürünlerim</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info text-center">
        Henüz favori ürününüz yok.
    </div>
}
else
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text text-success fw-bold">@product.Price.ToString("C", new CultureInfo("tr-TR"))</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="@Url.Action("AddToCart", "Home", new { id = product.Id })" class="btn btn-sm btn-primary">
                            🛒 Sepete Ekle
                        </a>
                        <a href="@Url.Action("RemoveFromFavorites", "Home", new { productId = product.Id })" class="btn btn-sm btn-danger">
                            🗑️ Favoriden Çıkar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
